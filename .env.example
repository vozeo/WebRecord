# WebRTC监控系统环境变量配置
# 复制此文件为 .env 并填入实际值

# 应用环境
NODE_ENV=development

# 配置文件路径（可选，默认使用 app.config.json）
# CONFIG_FILE=app.config.json
# CONFIG_PATH=/path/to/config/directory

# 服务器配置
SESSION_SECRET=your-session-secret-here
SAVE_PATH=./recordings
CERT_PATH=./ssl/cert.crt
KEY_PATH=./ssl/private.key

# 数据库配置
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=webrtc
DB_USER=WebRTC
DB_PASSWORD=your-database-password-here
DB_STULIST=monitor
DB_TYPE=all
DB_TERM=2022/2023/2
DB_CNO=100084
DB_ENO=04
DB_ENDTIME=3023-01-01 00:00:00

# 视频配置
VIDEO_WIDTH=1920
VIDEO_HEIGHT=1080
VIDEO_FRAMERATE=15
VIDEO_SLICE_TIME=3000
SCREEN_RECORD_ENABLED=true
SCREEN_MAX_DEVICES=3
CAMERA_RECORD_ENABLED=false
CAMERA_MAX_DEVICES=2
VIDEO_MIME_TYPE=video/webm;codecs=h264
VIDEO_BITRATE=2500000
AUDIO_BITRATE=128000
MAX_FILE_SIZE=100

# 网络配置
SOCKET_PORT=7080
TURN_SERVER_PORT=7100
TURN_SERVER_USERNAME=your-turn-username-here
TURN_SERVER_CREDENTIAL=your-turn-credential-here

# Redis配置
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
